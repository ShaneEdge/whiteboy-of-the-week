// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}

model Submission {
  id         String           @id @default(cuid())
  createdAt  DateTime         @default(now())
  name       String
  contact    String
  imageUrl   String
  isAdult    Boolean
  hasConsent Boolean
  status     SubmissionStatus @default(PENDING)
}

